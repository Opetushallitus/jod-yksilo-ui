{
  "name": "@jod/yksilo-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^22.0.0"
  },
  "license": "EUPL-1.2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write",
    "preview": "vite preview",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "translations:export": "node ./scripts/translations/export-translations.js jod-yksilo-ui",
    "translations:import": "node ./scripts/translations/import-translations.js jod-yksilo-ui",
    "translations:analyze": "node ./scripts/translations/analyze-translations.js",
    "translations:check": "node ./scripts/translations/analyze-translations.js --ci --check-langs fi,sv",
    "translations:report": "node ./scripts/translations/analyze-translations.js --list-unused --list-missing fi,sv"
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^5.2.1",
    "@jod/design-system": "github:Opetushallitus/jod-design-system#main",
    "driver.js": "^1.4.0",
    "i18next": "^25.3.6",
    "openapi-fetch": "^0.14.0",
    "openapi-typescript-fetch": "^2.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^15.7.1",
    "react-router": "^7.8.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.32.0",
    "@lavamoat/allow-scripts": "^3.4.1",
    "@lavamoat/preinstall-always-fail": "^2.1.1",
    "@playwright/test": "^1.54.2",
    "@singlestore/eslint-plugin-react-hooks-disable-import": "^1.0.2",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-sonarjs": "^3.0.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.1.5",
    "openapi-typescript": "^7.9.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4",
    "xlsx": "file:vendor/xlsx-0.20.3.tgz"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@tailwindcss/vite>@tailwindcss/oxide": true,
      "@vitejs/plugin-react-swc>@swc/core": true,
      "vite>esbuild": true
    }
  }
}
